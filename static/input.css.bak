*{
     margin: 0;
     padding: 0;
}

.container{
     display: flex;
     height: 100vh;
     width: 100vw;
     justify-content: center;
     align-items: center;
     border-style: dotted;
     background-image:url("img.jpg");
     background-repeat: no-repeat;
     background-size: cover;
     background-attachment:fixed ;
}
.submit{
     background-color: azure;
}
#content1::after{
     content: "  ";
     display: table-cell;
     white-space: pre;
     color: blue;
 }
 #content2::before{
     content: "  ";
     display: table-cell;
     white-space: pre;
 }